{
  "manifest_version": 2,
  "name": "Sky Fish",
  "version": "1.0.0",

  "description": "Finds relevant data from manga title using AniList",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["/dist/main.js"]
    }
  ],

  "options_ui": {
    "page": "dist/config/config.html",
    "browser_style": true,
    "chrome_style": true
  },

  "permissions": [
    "*://*.reddit.com/*",
    "https://graphql.anilist.co/",
    "storage"
  ]
}
